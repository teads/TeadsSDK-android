<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="tv.teads.teadssdkdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/ThemeTeads"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:exported="true"
            android:name=".v6.ui.base.MainActivityV6"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:exported="false"
            android:name=".v6.ui.base.IntegrationActivity"
            android:configChanges="keyboardHidden|orientation|screenSize|uiMode|locale|smallestScreenSize|colorMode|density"
            android:hardwareAccelerated="true"
            android:label="Integration Sample"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        </activity>

        <activity
            android:exported="false"
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3068786746829754~3613028870" />

        <meta-data android:name="applovin.sdk.key"
            android:value="CtFFIaXEO53aF-hpTnlPDqBiNLXG8e3mPMDLktuvKwHluzobrLE83BvsVhNrTeSeKPJx2Kg98mOuX_N6b5J_8b"/>
    </application>
</manifest>