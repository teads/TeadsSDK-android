<?xml version="1.0" encoding="utf-8"?>
<com.outbrain.OBSDK.Viewability.OBFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outbrain_rec_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/drawer_header_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/outbrain_classic_header_title_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Recommended to you"
            android:textColor="#EE7205"
            android:textSize="13sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/recommended_by_image"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@android:drawable/ic_menu_info_details" />
    </RelativeLayout>

</com.outbrain.OBSDK.Viewability.OBFrameLayout>
