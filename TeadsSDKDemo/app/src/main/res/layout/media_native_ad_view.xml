<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_root_ad_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true">

    <tv.teads.sdk.renderer.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical">

            <!-- Media View -->
            <tv.teads.sdk.renderer.MediaView
                android:id="@+id/teads_native_media"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <!-- Content Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/teads_native_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:background="#EAEAEA" />

                <!-- Text Content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Title -->
                    <TextView
                        android:id="@+id/teads_native_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="4dp"
                        android:text="Sample Native Ad Title" />

                    <!-- Advertiser -->
                    <TextView
                        android:id="@+id/teads_native_advertiser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#C9C9C9"
                        android:textSize="14sp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="Sponsored" />

                </LinearLayout>

                <!-- Call to Action Button -->
                <Button
                    android:id="@+id/teads_native_call_to_action"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#EE7205"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Learn More" />

            </LinearLayout>

        </LinearLayout>
    </tv.teads.sdk.renderer.NativeAdView>

</androidx.cardview.widget.CardView>
