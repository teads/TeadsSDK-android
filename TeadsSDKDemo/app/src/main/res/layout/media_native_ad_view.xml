<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_root_ad_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:clickable="true"
    android:focusable="true"
    android:visibility="gone">

    <tv.teads.sdk.renderer.NativeAdView
        android:id="@+id/native_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/background">

            <!-- Media View -->
            <tv.teads.sdk.renderer.MediaView
                android:id="@+id/teads_native_media"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Icon -->
            <ImageView
                android:id="@+id/teads_native_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toBottomOf="@id/teads_native_media"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Title -->
            <TextView
                android:id="@+id/teads_native_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/textTitle"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Sample Native Ad Title"
                app:layout_constraintTop_toBottomOf="@id/teads_native_media"
                app:layout_constraintStart_toEndOf="@id/teads_native_icon"
                app:layout_constraintEnd_toStartOf="@id/teads_native_call_to_action" />

            <!-- Advertiser -->
            <TextView
                android:id="@+id/teads_native_advertiser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/textBody"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Sponsored"
                app:layout_constraintTop_toBottomOf="@id/teads_native_title"
                app:layout_constraintStart_toEndOf="@id/teads_native_icon"
                app:layout_constraintEnd_toStartOf="@id/teads_native_call_to_action"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- Call to Action Button -->
            <Button
                android:id="@+id/teads_native_call_to_action"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/button_primary_background"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:minWidth="80dp"
                android:stateListAnimator="@null"
                tools:text="Learn More"
                app:layout_constraintTop_toBottomOf="@id/teads_native_media"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </tv.teads.sdk.renderer.NativeAdView>

</androidx.cardview.widget.CardView>
