<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDef" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/primaryDef" />
        </shape>
    </item>
    
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primaryDef" />
            <corners android:radius="20dp" />
            <stroke android:width="2dp" android:color="@color/primaryDef" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/primaryDef"
                android:endColor="@color/primaryDef"
                android:angle="0" />
            <corners android:radius="20dp" />
            <stroke android:width="1dp" android:color="@color/primaryDef" />
        </shape>
    </item>
</selector>
